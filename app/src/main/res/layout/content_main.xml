<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context=".MainActivity">

	<io.github.bradpatras.todometer.meter.MeterView
		android:id="@+id/todo_meter"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		android:layout_marginTop="20dp"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
	/>

	<Button
		android:id="@+id/addtodo_btn"
		android:layout_width="100dp"
		android:layout_height="60dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="@id/addlater_btn"
		android:layout_marginRight="40dp"
		android:layout_marginBottom="35dp"
		style="@style/AppTheme"
		android:text="add item"
	/>

	<Button
		android:id="@+id/done_btn"
		android:layout_width="100dp"
		android:layout_height="60dp"
		app:layout_constraintBottom_toTopOf="@id/addtodo_btn"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="@id/addlater_btn"
		android:layout_marginRight="40dp"
		android:layout_marginBottom="10dp"
		style="@style/AppTheme"
		android:text="complete item"
	/>

	<Button
		android:id="@+id/addlater_btn"
		android:layout_width="100dp"
		android:layout_height="60dp"
		app:layout_constraintBottom_toTopOf="@id/subtractlater_btn"
		app:layout_constraintLeft_toLeftOf="@id/done_btn"
		app:layout_constraintRight_toRightOf="parent"
		android:layout_marginLeft="40dp"
		android:layout_marginBottom="10dp"
		style="@style/AppTheme"
		android:text="add later item"
	/>

	<Button
		android:id="@+id/subtractlater_btn"
		android:layout_width="100dp"
		android:layout_height="60dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="@id/done_btn"
		app:layout_constraintRight_toRightOf="parent"
		android:layout_marginLeft="40dp"
		android:layout_marginBottom="35dp"
		style="@style/AppTheme"
		android:text="complete later item"
	/>

</androidx.constraintlayout.widget.ConstraintLayout>