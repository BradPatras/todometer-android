<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<TextView
		android:id="@+id/header_tv"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:layout_marginBottom="4dp"
		android:fontFamily="sans-serif-medium"
		android:textColor="@color/tasklistItemText"
		android:textSize="32sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toEndOf="@id/collapse_iv"
		app:layout_constraintTop_toTopOf="parent"
		android:layout_marginStart="4dp"/>

	<ImageView
		android:id="@+id/collapse_iv"
		android:layout_width="35dp"
		android:layout_height="0dp"
		app:layout_constraintTop_toTopOf="@id/header_tv"
		app:layout_constraintBottom_toBottomOf="@id/header_tv"
		app:layout_constraintStart_toStartOf="parent"
		android:layout_marginTop="10dp"
		android:layout_marginBottom="6dp"
		android:scaleType="centerInside"
		android:src="@drawable/ic_resume"
		android:rotation="90"
		android:tint="@android:color/white"
		/>
</androidx.constraintlayout.widget.ConstraintLayout>